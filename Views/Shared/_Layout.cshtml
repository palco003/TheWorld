<!DOCTYPE html>
<html>
    <head>
        <title>The World - @ViewBag.Title</title>
        <meta charset="utf-8"/>

        <link rel="stylesheet" href="~/css/site.css"/>
    </head>
    <body>
        <div id="sidebar">
            <img src="~/img/headshotPablo.jpg" alt="headshot" class="headshot"/>
            <span id="username">Pablo Alcocer</span>
            <ul class="menu">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </div>
        <div id="wrapper">
            <div id="main"> 
                <div>
                    <button id="sidebarToggle">Toggle Menu</button>
                </div>
                @RenderBody()
            </div>
            <div id="footer">
                &copy; 2016 Pablo Alcocer
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js"></script>
    </body>
</html>